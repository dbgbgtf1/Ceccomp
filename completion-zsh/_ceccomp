# compdef ceccomp

_arguments -C \
  '1:command:(( \
  asm:"assemble text into raw bpf" \
  disasm:"disasm raw bpf into text" \
  trace:"trace program bpf out and print text" \
  emu:"emulate a syscall with args" \
  help:"show help" \
  version:"show version"))' \
  '*:: :->args' 

case $state in
  args)
    _files
    ;;
esac

